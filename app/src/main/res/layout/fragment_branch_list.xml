<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.BranchListFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fbl_rvBranchList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.BranchListFragment">

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/llNoData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_no_offer" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/you_do_not_have_branches"
            android:textAppearance="@android:style/Widget.ActionBar.TabText"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>
</FrameLayout>
