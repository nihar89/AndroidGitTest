<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    app:cardUseCompatPadding="true"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_weight="0.25"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/olip_ivProduct"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/image_placeholder" />

        <ImageView
            android:id="@+id/ivOffer"
            android:scaleType="fitStart"
            android:visibility="gone"
            android:layout_marginStart="-5dp"
            android:src="@drawable/ic_offer_tag"
            android:layout_width="wrap_content"
            android:layout_height="100dp" />
    </FrameLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_weight="0.75"
        android:orientation="vertical">

        <TextView
            android:id="@+id/od_tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Prodcut en"
            android:textColor="@android:color/black"
            android:textSize="@dimen/header_text_size" />

        <TextView
            android:id="@+id/od_tvCategory"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/electronics"
            android:textColor="@android:color/black"
            android:textSize="@dimen/content_text_size" />

        <TextView
            android:id="@+id/od_tvQty"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Qty: 1"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/content_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/od_tvAmt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/sar"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/content_text_size" />

            <TextView
                android:id="@+id/od_tvAmtDisc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="@string/sar"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/content_text_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/od_tvCouponCode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/coupon_code"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/content_text_size" />

        <TextView
            android:id="@+id/od_tvCouponType"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/coupon_type"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/content_text_size" />

        <TextView
            android:id="@+id/od_tvDiscount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/discount"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/content_text_size" />
    </LinearLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>