<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardUseCompatPadding="true"
    app:cardElevation="5dp"
    app:elevation="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp">

        <LinearLayout
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/cli_name">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:textSize="@dimen/content_text_size"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
            <TextView
                android:layout_marginStart="8dp"
                android:id="@+id/clil_tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XYZ compny"
                android:textSize="@dimen/content_text_size"
                android:textColor="@android:color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

        </LinearLayout>


        <LinearLayout
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/cli_chatwith">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chat_with"
                android:textSize="@dimen/content_text_size"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
            <TextView
                android:layout_marginStart="8dp"
                android:id="@+id/clil_tvChatWith"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/content_text_size"
                android:text="@string/shipment"
                android:textColor="@android:color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

        </LinearLayout>


        <LinearLayout
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/cli_orderno">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_no"
                android:textSize="@dimen/content_text_size"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
            <TextView
                android:layout_marginStart="8dp"
                android:id="@+id/clil_tvOrderNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 20"
                android:textSize="@dimen/content_text_size"
                android:textColor="@android:color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>

