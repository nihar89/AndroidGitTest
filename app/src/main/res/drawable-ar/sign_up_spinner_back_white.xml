<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <layer-list>
            <item>
                <shape
                    android:shape="rectangle"
                    android:thickness="2dp">
                    <stroke
                        android:width="1dp"
                        android:color="@color/gray" />
                    <corners android:radius="16dp" />

                </shape>
            </item>
            <item android:left="8dp">
                <bitmap android:src="@drawable/drop_down_arrow_white" android:width="16dp" android:height="16dp" android:gravity="center_vertical|left" android:left="8dp"/>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape
                    android:shape="rectangle"
                    android:thickness="2dp">
                    <stroke
                        android:width="1dp"
                        android:color="@color/gray" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
            <item android:left="8dp">
                <bitmap android:src="@drawable/drop_down_arrow_white" android:width="16dp" android:height="16dp" android:gravity="center_vertical|left" android:left="8dp"/>
            </item>
        </layer-list>
    </item>
</selector>
