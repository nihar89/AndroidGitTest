<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:id="@+id/fss_rlMain"
    android:background="@drawable/background"
    tools:context="com.mahalati.mahalatibusiness.fragments.ShipmentSignUpScreen">

    <RelativeLayout
        android:id="@+id/ss_rlheder"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/app_green">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/shipment_registration"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/header_text_size"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:id="@+id/ss_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ss_rlheder"
        android:background="@color/white" />



    <ScrollView
        android:layout_width="fill_parent"
        android:isScrollContainer="false"
        android:background="@drawable/sign_up_bg"
        android:layout_height="fill_parent"
        android:layout_above="@id/rlBottom"
        android:layout_below="@+id/ss_view"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <Spinner
                    android:id="@+id/ss_spCarType"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/sign_up_spinner_back"
                    android:entries="@array/carTypeArray"
                    android:hint="@string/car_type"
                    android:inputType="textPostalAddress"
                    android:textAppearance="@android:style/Widget.ActionBar.TabText"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/ss_etCarColor"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="right|center_vertical"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.5"
                    android:paddingRight="8dp"
                    android:background="@drawable/drawable_rectangle_round_edge_trans_color_white_border"
                    android:hint="@string/car_color"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textAppearance="@android:style/Widget.ActionBar.TabText"
                    android:textColor="@color/login_text_color"
                    android:textColorHint="@color/login_text_color"
                    android:textSize="13sp"
                    android:textCursorDrawable="@null"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <EditText
                    android:id="@+id/ss_tvCayPlateNo"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.5"
                    android:gravity="right|center_vertical"
                    android:background="@drawable/drawable_rectangle_round_edge_trans_color_white_border"
                    android:hint="@string/plate_no"
                    android:inputType="text"
                    android:paddingRight="8dp"
                    android:maxLines="1"
                    android:textAppearance="@android:style/Widget.ActionBar.TabText"
                    android:textColor="@color/login_text_color"
                    android:textColorHint="@color/login_text_color"
                    android:textSize="13sp"
                    android:textCursorDrawable="@null" />

                <EditText
                    android:id="@+id/ss_etModelNo"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/drawable_rectangle_round_edge_trans_color_white_border"
                    android:gravity="right|center_vertical"
                    android:hint="@string/model_no"
                    android:inputType="text"
                    android:paddingRight="8dp"
                    android:maxLines="1"
                    android:textAppearance="@android:style/Widget.ActionBar.TabText"
                    android:textColor="@color/login_text_color"
                    android:textColorHint="@color/login_text_color"
                    android:textSize="13sp"
                    android:textCursorDrawable="@null"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <EditText
                    android:id="@+id/ss_etLicenceNo"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/drawable_rectangle_round_edge_trans_color_white_border"
                    android:hint="@string/licence_no"
                    android:inputType="text"
                    android:paddingRight="8dp"
                    android:gravity="right|center_vertical"
                    android:maxLines="1"
                    android:textAppearance="@android:style/Widget.ActionBar.TabText"
                    android:textColor="@color/login_text_color"
                    android:textColorHint="@color/login_text_color"
                    android:textSize="13sp"
                    android:textCursorDrawable="@null"/>

                <EditText
                    android:id="@+id/ss_etRegisterNo"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.5"
                    android:gravity="right|center_vertical"
                    android:background="@drawable/drawable_rectangle_round_edge_trans_color_white_border"
                    android:hint="@string/register_no"
                    android:inputType="text"
                    android:paddingRight="8dp"
                    android:maxLines="1"
                    android:textAppearance="@android:style/Widget.ActionBar.TabText"
                    android:textColor="@color/login_text_color"
                    android:textColorHint="@color/login_text_color"
                    android:textSize="13sp"
                    android:textCursorDrawable="@null"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <EditText
                    android:id="@+id/ss_etLicenceExpiryDate"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/drawable_rectangle_round_edge_trans_color_white_border"
                    android:gravity="right|center_vertical"
                    android:hint="@string/licence_expiry_no"
                    android:inputType="date"
                    android:paddingLeft="8dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:textAppearance="@android:style/Widget.ActionBar.TabText"
                    android:textColor="@color/login_text_color"
                    android:textColorHint="@color/login_text_color"
                    android:textSize="13sp"
                    android:textCursorDrawable="@null"/>

                <EditText
                    android:id="@+id/ss_etRegistrationExpiryDate"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/drawable_rectangle_round_edge_trans_color_white_border"
                    android:gravity="right|center_vertical"
                    android:hint="@string/registation_expiry_no"
                    android:inputType="date"
                    android:paddingRight="8dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:textAppearance="@android:style/Widget.ActionBar.TabText"
                    android:textColor="@color/login_text_color"
                    android:textColorHint="@color/login_text_color"
                    android:textSize="13sp"
                    android:textCursorDrawable="@null"/>

            </LinearLayout>

            <EditText
                android:id="@+id/ss_etLocation"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:paddingRight="8dp"
                android:background="@drawable/drawable_rectangle_round_edge_trans_color_white_border"
                android:gravity="right|center_vertical"
                android:hint="@string/address"
                android:inputType="text"
                android:maxLines="1"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:textAppearance="@android:style/Widget.ActionBar.TabText"
                android:textColor="@color/login_text_color"
                android:textColorHint="@color/login_text_color"
                android:textSize="13sp"
                android:textCursorDrawable="@null"/>

            <androidx.cardview.widget.CardView
                android:id="@id/fpo_cvMap"
                app:cardCornerRadius="16dp"
                android:visibility="gone"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                app:cardUseCompatPadding="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.mahalati.mahalatibusiness.utils.CustomMapView
                    android:id="@+id/sigUpMap"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                </com.mahalati.mahalatibusiness.utils.CustomMapView>
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <EditText
                    android:id="@+id/ss_tvStreet"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/drawable_rectangle_round_edge_trans_color_white_border"
                    android:gravity="right|center_vertical"
                    android:hint="@string/address"
                    android:maxLines="1"
                    android:inputType="text"
                    android:paddingLeft="8dp"
                    android:textAppearance="@android:style/Widget.ActionBar.TabText"
                    android:textColor="@color/login_text_color"
                    android:textColorHint="@color/login_text_color"
                    android:textSize="13sp"
                    android:textCursorDrawable="@null"/>

                <EditText
                    android:id="@+id/ss_etCity"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/drawable_rectangle_round_edge_trans_color_white_border"
                    android:gravity="right|center_vertical"
                    android:hint="@string/city"
                    android:inputType="textPersonName"
                    android:paddingRight="8dp"
                    android:maxLines="1"
                    android:textAppearance="@android:style/Widget.ActionBar.TabText"
                    android:textColor="@color/login_text_color"
                    android:textColorHint="@color/login_text_color"
                    android:textSize="13sp"
                    android:textCursorDrawable="@null" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <EditText
                    android:id="@+id/ss_tvState"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/drawable_rectangle_round_edge_trans_color_white_border"
                    android:gravity="right|center_vertical"
                    android:hint="@string/state"
                    android:inputType="text"
                    android:paddingRight="8dp"
                    android:maxLines="1"
                    android:textAppearance="@android:style/Widget.ActionBar.TabText"
                    android:textColor="@color/login_text_color"
                    android:textColorHint="@color/login_text_color"
                    android:textSize="13sp"
                    android:textCursorDrawable="@null"/>

                <EditText
                    android:id="@+id/ss_etCountry"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:gravity="right|center_vertical"
                    android:layout_weight="0.5"
                    android:paddingRight="8dp"
                    android:background="@drawable/drawable_rectangle_round_edge_trans_color_white_border"
                    android:hint="@string/country"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textAppearance="@android:style/Widget.ActionBar.TabText"
                    android:textColor="@color/login_text_color"
                    android:textColorHint="@color/login_text_color"
                    android:textSize="13sp"
                    android:textCursorDrawable="@null"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <EditText
                    android:id="@+id/ss_etAddress"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/drawable_rectangle_round_edge_trans_color_white_border"
                    android:gravity="right|center_vertical"
                    android:hint="@string/street"
                    android:maxLines="1"
                    android:inputType="text"
                    android:paddingLeft="8dp"
                    android:textAppearance="@android:style/Widget.ActionBar.TabText"
                    android:textColor="@color/login_text_color"
                    android:textColorHint="@color/login_text_color"
                    android:textSize="13sp"
                    android:textCursorDrawable="@null" />

                <EditText
                    android:id="@+id/ss_etZipCode"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/drawable_rectangle_round_edge_trans_color_white_border"
                    android:gravity="right|center_vertical"
                    android:hint="@string/zipcode"
                    android:inputType="number"
                    android:maxLines="1"
                    android:paddingRight="8dp"
                    android:textAppearance="@android:style/Widget.ActionBar.TabText"
                    android:textColor="@color/login_text_color"
                    android:textColorHint="@color/login_text_color"
                    android:textSize="13sp"
                    android:textCursorDrawable="@null" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:text="@string/terms_and_conditions"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/ss_etTerms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/drawable_rectangle_round_edge_trans_color_white_border"
                android:gravity="right|top"
                android:inputType="textMultiLine"
                android:lines="3"
                android:padding="10dp"
                android:textColor="@color/login_text_color"
                android:textColorHint="@color/login_text_color"
                android:textSize="13sp"
                android:textCursorDrawable="@null"/>

            <RelativeLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/fsr_btnBack"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rounded_backgrond_green"
                    android:text="@string/back"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <Button
                    android:id="@+id/fsr_btnSubmit"
                    android:layout_alignParentLeft="true"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rounded_backgrond_green"
                    android:text="@string/submit"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="normal" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/rlBottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@color/app_green">

        <Button
            android:id="@+id/ss_btnSignIn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/teal_color"
            android:text="@string/have_an_account"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@android:color/white" />

    </RelativeLayout>

</RelativeLayout>
