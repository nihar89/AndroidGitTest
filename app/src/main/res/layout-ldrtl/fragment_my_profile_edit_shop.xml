<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MyProfileEditShopFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/mpf_etOwnerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="16dp"
            android:gravity="right"
            android:background="@drawable/round_edittext"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:paddingStart="10dp"
            android:hint="@string/shop_owner_name"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/mpf_etNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:background="@drawable/round_edittext"
            android:inputType="number"
            android:padding="10dp"
            android:paddingStart="10dp"
            android:hint="@string/mobile_no"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/mpf_etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/round_edittext"
            android:inputType="textWebEmailAddress"
            android:padding="10dp"
            android:paddingStart="10dp"
            android:gravity="right"
            android:hint="@string/email"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/mpf_etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/round_edittext"
            android:inputType="text"
            android:maxLines="1"
            android:padding="10dp"
            android:gravity="right"
            android:paddingStart="10dp"
            android:hint="@string/shop_name"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/mpf_etCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/round_edittext"
            android:inputType="text"
            android:maxLines="1"
            android:padding="10dp"
            android:paddingStart="10dp"
            android:gravity="right"
            android:hint="@string/shop_company_name"
            android:textSize="15sp" />



        <EditText
            android:id="@+id/mpf_etManagerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/round_edittext"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:paddingStart="10dp"
            android:gravity="right"
            android:hint="@string/shop_manager_name"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/mpf_etShopMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/round_edittext"
            android:inputType="number"
            android:padding="10dp"
            android:paddingStart="10dp"
            android:gravity="right"
            android:hint="@string/shop_mobile_number"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/mpf_etShopPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/round_edittext"
            android:inputType="number"
            android:padding="10dp"
            android:gravity="right"
            android:paddingStart="10dp"
            android:hint="@string/phone_number"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/mpf_etShopFax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/round_edittext"
            android:inputType="number"
            android:padding="10dp"
            android:paddingStart="10dp"
            android:gravity="right"
            android:hint="@string/fax"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:visibility="gone"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/orderacceptadmin"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp"
                android:textStyle="normal" />

            <RadioGroup
                android:id="@+id/radiogroupshop"
                android:layout_width="match_parent"
                android:gravity="end"
                android:orientation="horizontal"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/radioyes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_3sdp"
                    android:text="@string/yes"
                    android:buttonTint="@color/black"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/black" />

                <RadioButton
                    android:id="@+id/radiono"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/_11sdp"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/black"
                    android:layout_margin="@dimen/_3sdp"
                    android:textColor="@color/black"
                    android:text="@string/no" />

            </RadioGroup>
        </LinearLayout>

        <Button
            android:id="@+id/mpf_btnNext"
            android:layout_width="120dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/btn_round_shap_primery_color"
            android:text="@string/next"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>