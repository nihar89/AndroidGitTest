<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fss_rlMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background"
    tools:context=".fragments.AddProductFragment">

    <RelativeLayout
        android:id="@+id/fsr_rlheader"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/app_green">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/shop_registration_Header"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/header_text_size"
            android:textStyle="bold" />

    </RelativeLayout>

    <View
        android:id="@+id/ss_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/fsr_rlheader"
        android:background="@color/white"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rlBottom"
        android:layout_below="@+id/fsr_rlheader"
        android:background="@drawable/sign_up_bg"
        android:isScrollContainer="false">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/fsr_etShopOwnerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/drawable_rectangle_round_edge_trans_color_white_border"
                android:gravity="right|center_vertical"
                android:hint="@string/shop_owner_name"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="@color/login_text_color"
                android:textColorHint="@color/login_text_color"
                android:textCursorDrawable="@null"
                android:textSize="13sp" />


            <EditText
                android:id="@+id/fsr_etShopOwnerEmailId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/drawable_rectangle_round_edge_trans_color_white_border"
                android:gravity="right|center_vertical"
                android:hint="@string/shop_owner_email"
                android:inputType="textWebEmailAddress"
                android:padding="10dp"
                android:textColor="@color/login_text_color"
                android:textColorHint="@color/login_text_color"
                android:textCursorDrawable="@null"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/fsr_etShopOwnerMobileNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/drawable_rectangle_round_edge_trans_color_white_border"
                android:gravity="right|center_vertical"
                android:hint="@string/shop_owner_mobileno"
                android:inputType="number"
                android:padding="10dp"
                android:textColor="@color/login_text_color"
                android:textColorHint="@color/login_text_color"
                android:textCursorDrawable="@null"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/fsr_etShopName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/drawable_rectangle_round_edge_trans_color_white_border"
                android:gravity="right|center_vertical"
                android:hint="@string/shop_name"
                android:inputType="textCapWords"
                android:padding="10dp"
                android:textColor="@color/login_text_color"
                android:textColorHint="@color/login_text_color"
                android:textCursorDrawable="@null"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/fsr_etShopCompanyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/drawable_rectangle_round_edge_trans_color_white_border"
                android:gravity="right|center_vertical"
                android:hint="@string/shop_company_name"
                android:inputType="textCapWords"
                android:padding="10dp"
                android:textColor="@color/login_text_color"
                android:textColorHint="@color/login_text_color"
                android:textCursorDrawable="@null"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/fsr_etShopManagerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/drawable_rectangle_round_edge_trans_color_white_border"
                android:gravity="right|center_vertical"
                android:hint="@string/shop_manager_name"
                android:inputType="textCapWords"
                android:padding="10dp"
                android:textColor="@color/login_text_color"
                android:textColorHint="@color/login_text_color"
                android:textCursorDrawable="@null"
                android:textSize="13sp" />


            <EditText
                android:id="@+id/fsr_etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/drawable_rectangle_round_edge_trans_color_white_border"
                android:gravity="right|center_vertical"
                android:hint="@string/email"
                android:inputType="textWebEmailAddress"
                android:padding="10dp"
                android:textColor="@color/login_text_color"
                android:textColorHint="@color/login_text_color"
                android:textCursorDrawable="@null"
                android:textSize="13sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/drawable_rectangle_round_edge_trans_color_white_border"
                android:paddingLeft="8dp">

                <EditText
                    android:id="@+id/fsr_etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:maxLength="8"
                    android:padding="10dp"
                    android:textColor="@color/login_text_color"
                    android:textColorHint="@color/login_text_color"
                    android:textCursorDrawable="@null"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/fls_ivPassShowHide"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/hide_pass" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/drawable_rectangle_round_edge_trans_color_white_border"
                android:paddingLeft="8dp">

                <EditText
                    android:id="@+id/fsr_etConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="@string/confirm_password"
                    android:inputType="textPassword"
                    android:maxLength="8"
                    android:padding="10dp"
                    android:textColor="@color/login_text_color"
                    android:textColorHint="@color/login_text_color"
                    android:textCursorDrawable="@null"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/fls_ivCPassShowHide"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/hide_pass" />
            </RelativeLayout>

            <EditText
                android:id="@+id/fsr_etShopMobileNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="@string/input_key_phone_number"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/drawable_rectangle_round_edge_trans_color_white_border"
                android:gravity="right|center_vertical"
                android:hint="@string/shop_mobile_number"
                android:inputType="number"
                android:maxLength="15"
                android:imeOptions="actionNext"
                android:padding="10dp"
                android:textColor="@color/login_text_color"
                android:textColorHint="@color/login_text_color"
                android:textCursorDrawable="@null"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/fsr_etPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/drawable_rectangle_round_edge_trans_color_white_border"
                android:gravity="right|center_vertical"
                android:hint="@string/phone_no"
                android:inputType="number"
                android:padding="10dp"
                android:textColor="@color/login_text_color"
                android:textColorHint="@color/login_text_color"
                android:textCursorDrawable="@null"
                android:textSize="13sp" />


            <EditText
                android:id="@+id/fsr_etFax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/drawable_rectangle_round_edge_trans_color_white_border"
                android:gravity="right|center_vertical"
                android:hint="@string/fax"
                android:inputType="number"
                android:padding="10dp"
                android:textColor="@color/login_text_color"
                android:textColorHint="@color/login_text_color"
                android:textCursorDrawable="@null"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_8sdp"
                android:visibility="visible"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/lable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/orderacceptadmin"
                    android:textAllCaps="false"
                    android:textColor="@color/login_text_color"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <RadioGroup
                    android:id="@+id/radiogroupshop"
                    android:layout_width="match_parent"
                    android:gravity="end"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content" >

                    <RadioButton
                        android:id="@+id/radioyes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_3sdp"
                        android:text="@string/yes"
                        android:buttonTint="@color/login_text_color"
                        android:textColor="@color/login_text_color" />

                    <RadioButton
                        android:id="@+id/radiono"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/login_text_color"
                        android:layout_margin="@dimen/_3sdp"
                        android:textColor="@color/login_text_color"
                        android:text="@string/no" />

                </RadioGroup>
            </LinearLayout>

            <TextView
                android:id="@+id/fsr_tvSubmit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/drawable_rectangle_round_edge_black_trans_color_white_border"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="8dp"
                android:text="@string/next"
                android:textColor="@color/white"
                android:textColorHint="@color/login_text_color"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/rlBottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@color/app_green">

        <Button
            android:id="@+id/btnSignIn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/teal_color"
            android:text="@string/have_an_account"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@android:color/white" />

    </RelativeLayout>
</RelativeLayout>

