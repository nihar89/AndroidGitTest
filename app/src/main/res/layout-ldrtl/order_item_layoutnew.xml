<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:visibility="visible"
        app:cardCornerRadius="4dp"
        app:cardUseCompatPadding="true">

        <androidx.cardview.widget.CardView
            android:id="@+id/oil_cvCancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            app:cardBackgroundColor="@color/gray"
            app:cardCornerRadius="4dp"
            app:cardUseCompatPadding="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"
                android:text="Canceled"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/linear_main_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linear_order_prepareby"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginEnd="@dimen/_5sdp"
                android:orientation="horizontal"
                android:padding="4dp"
                android:visibility="invisible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_prepared_by"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/content_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" :"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/content_text_size" />

                <TextView
                    android:id="@+id/oil_tvOrderPrepareby"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:maxLines="2"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/content_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_no_lable"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/content_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/oil_tvOrderNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="266"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/content_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/customer_name"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/content_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/oil_tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="Tanay"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/content_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_amount"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/content_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/oil_tvAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="1100"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/content_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/payment_method"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/content_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/oil_tvMethod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="delivery_by_shop"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/content_text_size" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_date"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/content_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/oil_tvOrderDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="2016-12-28 16:46:00"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/content_text_size" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/delivery_date"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/content_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/oil_tvDelieveryDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="2016-12-31 16:46:00"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/content_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp">

                <TextView
                    android:id="@+id/shopname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shop_name"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/content_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/shopname_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/content_text_size" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="24dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/oil_ivShopConfirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_circle_gray"
                    android:visibility="gone" />

                <!--//line image-->

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/oil_ivLine1"
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:layout_gravity="center"
                        android:src="@color/gray" />
                </FrameLayout>

                <ImageView
                    android:id="@+id/oil_ivCustomerPayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_circle_gray"
                    android:visibility="gone" />

                <!--<FrameLayout-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_weight="0.2">-->

                <!--<ImageView-->
                <!--android:id="@+id/oil_ivLine2"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="6dp"-->
                <!--android:layout_gravity="center"-->
                <!--android:src="@color/gray" />-->
                <!--</FrameLayout>-->

                <ImageView
                    android:id="@+id/oil_ivReadyPayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_circle_gray"
                    android:visibility="gone" />

                <!--<FrameLayout-->
                <!--android:id="@+id/oil_flLine3"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_weight="0.2">-->

                <!--<ImageView-->
                <!--android:id="@+id/oil_ivLine3"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="6dp"-->
                <!--android:layout_gravity="center"-->
                <!--android:src="@color/gray" />-->
                <!--</FrameLayout>-->

                <ImageView
                    android:id="@+id/oil_tvDeliveryConfirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_circle_gray" />

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2">

                    <ImageView
                        android:id="@+id/oil_ivLine4"
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:layout_gravity="center"
                        android:src="@color/gray" />
                </FrameLayout>

                <ImageView
                    android:id="@+id/oil_tvDeliveryCollected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_circle_gray" />

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2">

                    <ImageView
                        android:id="@+id/oil_ivLine5"
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:layout_gravity="center"
                        android:src="@color/gray" />
                </FrameLayout>

                <ImageView
                    android:id="@+id/oil_tvDeliveryitemdelivered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_circle_gray" />

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2">

                    <ImageView
                        android:id="@+id/oil_ivLine6"
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:layout_gravity="center"
                        android:src="@color/gray" />
                </FrameLayout>

                <ImageView
                    android:id="@+id/oil_tvOrderReceived"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_circle_gray" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:text="@string/shop_confirmed"
                    android:textColor="@color/colorPrimary"
                    android:textSize="11sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/oil_tvShipmentConfirmed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:text="@string/shipment_confirmed"
                    android:textColor="@color/colorPrimary"
                    android:textSize="11sp"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:text="@string/customer_payment"
                    android:textColor="@color/colorPrimary"
                    android:textSize="11sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/oil_tvReadyForDelivery"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:text="@string/ready_for_delivery"
                    android:textColor="@color/colorPrimary"
                    android:textSize="11sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/oil_tvDeliveryConfirmed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:text="@string/delivery_confirmed"
                    android:textColor="@color/colorPrimary"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/oil_tvDeliveryItemCollected"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:text="@string/delivery_item_collected"
                    android:textColor="@color/colorPrimary"
                    android:textSize="11sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:text="@string/deliver_item_delivered"
                    android:textColor="@color/colorPrimary"
                    android:textSize="11sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:text="@string/customer_rating"
                    android:textColor="@color/colorPrimary"
                    android:textSize="11sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/oil_tvCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/cancle"
                android:textColor="@android:color/white"
                android:textSize="@dimen/header_text_size"
                android:textStyle="bold"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/linear_order_prepare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:orientation="horizontal"
                android:padding="8dp"
                android:weightSum="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:gravity="right"
                    android:text="@string/order_prepared"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/content_text_size" />

                <EditText
                    android:id="@+id/edt_orderprepare_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="45"
                    android:background="@android:drawable/editbox_background"
                    android:hint="@string/name"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/content_text_size" />

                <TextView
                    android:id="@+id/tv_orderPrepare_send"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="15"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/send"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/content_text_size" />
            </LinearLayout>

            <ImageView
                android:id="@+id/oil_ivLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                android:visibility="gone" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>


</FrameLayout>