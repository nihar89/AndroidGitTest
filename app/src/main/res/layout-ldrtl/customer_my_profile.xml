<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".fragments.DeliveryShipmentEditFragment">

    <ScrollView
        android:id="@+id/activity_delivery_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ln_bottom_container"
        android:background="@android:color/white"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etCustomerName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/ic_profile_text_back"
                android:hint="@string/name"
                android:gravity="right|center_vertical"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:paddingStart="10dp"
                android:textSize="@dimen/content_text_size" />

            <RadioGroup
                android:id="@+id/rgGender"
                android:paddingStart="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="1">

                <RadioButton
                    android:id="@+id/rbMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:checked="true"
                    android:paddingEnd="5dp"
                    android:button="@drawable/radiobutton_drawable"
                    android:paddingStart="5dp"
                    android:text="@string/Male"
                    android:textSize="@dimen/content_text_size" />


                <RadioButton
                    android:id="@+id/rbFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:button="@drawable/radiobutton_drawable"
                    android:text="@string/female"
                    android:textSize="@dimen/content_text_size" />

            </RadioGroup>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/etAge"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_profile_text_back"
                    android:hint="@string/age"
                    android:inputType="number"
                    android:maxLength="3"
                    android:paddingStart="10dp"
                    android:gravity="right|center_vertical"
                    android:textSize="@dimen/content_text_size" />

                <EditText
                    android:id="@+id/etMobile"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/ic_profile_text_back"
                    android:hint="@string/mobile_no"
                    android:inputType="number"
                    android:maxLength="15"
                    android:paddingStart="10dp"
                    android:gravity="right|center_vertical"
                    android:textSize="@dimen/content_text_size" />

                <EditText
                    android:id="@+id/etPhone"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/ic_profile_text_back"
                    android:hint="@string/phone_no"
                    android:inputType="number"
                    android:maxLength="15"
                    android:paddingStart="10dp"
                    android:gravity="right|center_vertical"
                    android:textSize="@dimen/content_text_size" />

                <EditText
                    android:visibility="gone"
                    android:id="@+id/etAddress"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/ic_profile_text_back"
                    android:hint="@string/location"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingStart="10dp"
                    android:gravity="right|center_vertical"
                    android:textSize="@dimen/content_text_size" />


                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/etAddressLine1"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="6dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/ic_profile_text_back"
                        android:hint="@string/street"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingStart="10dp"
                        android:gravity="right|center_vertical"
                        android:textSize="@dimen/content_text_size" />

                    <EditText
                        android:id="@+id/etCity"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="6dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/ic_profile_text_back"
                        android:hint="@string/city"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingStart="10dp"
                        android:gravity="right|center_vertical"
                        android:textSize="@dimen/content_text_size" />

                </LinearLayout>


                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/etState"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="6dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/ic_profile_text_back"
                        android:hint="@string/state"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingStart="10dp"
                        android:gravity="right|center_vertical"
                        android:textSize="@dimen/content_text_size" />

                    <EditText
                        android:id="@+id/etCountry"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="6dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/ic_profile_text_back"
                        android:hint="@string/country"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingStart="10dp"
                        android:gravity="right|center_vertical"
                        android:textSize="@dimen/content_text_size" />


                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/etDistrict"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="6dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/ic_profile_text_back"
                        android:hint="@string/district"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingStart="10dp"
                        android:gravity="right|center_vertical"
                        android:textSize="@dimen/content_text_size" />

                    <EditText
                        android:id="@+id/etZipCode"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="6dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/ic_profile_text_back"
                        android:hint="@string/zip_code"
                        android:inputType="number"
                        android:maxLines="1"
                        android:paddingStart="10dp"
                        android:gravity="right|center_vertical"
                        android:textSize="@dimen/content_text_size" />
                </LinearLayout>



            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ln_bottom_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

    <LinearLayout
        android:id="@+id/fs_llChangePass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bid_order_shape_primery_color"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/change_password"
            android:textColor="@android:color/white"
            android:textSize="@dimen/header_text_size"
            android:textStyle="normal" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:src="@drawable/right_arrow"
            android:visibility="gone"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnSubmit"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/header_text_size"
            android:background="@drawable/drawable_white_bg_round_border_with_primary_color"
            android:text="@string/save_changes"
            android:textColor="@color/colorPrimary"
            android:textStyle="normal"
            android:textAllCaps="false"/>

    </LinearLayout>

</RelativeLayout>